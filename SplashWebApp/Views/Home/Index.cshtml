@{
    @model SplashWebApp.Logic.Profile;
    ViewData["Title"] = "Home Page";
}

<div class="border border-primary p-3" style="margin: 20% auto">
    <div class="container">            
        <form asp-controller="Home" asp-action="Login" method="get" runat="server">
            <div class="row">            
                <div class="text-center ">
                    <h1> Splash Login</h1>
                </div>
                <div class="col-md-2">
                    <h3>Username:</h3>
                </div>
                <div class="col-md-10">
                    <input type="text" id="f0" name="_UsernameLogin" value="" runat="server" class="form-control" placeholder="username"/>
                </div>
                <div class="text-center col-md-12" style="padding-top:15px">
                    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                </div>
            </div>            
        </form>
    </div>
</div>

<div>
    <form asp-controller="Home" asp-action="GetInput" method="post">
        <label asp-for="ProfileName"></label>
        <input asp-for="ProfileName" placeholder="Input name" id="test"/>
        <input type="submit" />
    </form>
</div>

